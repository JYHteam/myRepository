<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qianfeng.dao.UsersDao">
    <select id="login" resultType="com.qianfeng.bean.Users">
        SELECT * FROM users WHERE users_account=#{users_account} AND users_pwd=#{users_pwd}
    </select>
    <select id="findUsers"  resultType="com.qianfeng.bean.Users">
        SELECT * FROM users u
        <where>
         <if test="users_account !=null ">
           u.users_account LIKE CONCAT(CONCAT('%', #{users_account, jdbcType=VARCHAR}),'%')
         </if>
        </where>
    </select>
    <select id="findAllUsers" resultType="com.qianfeng.bean.Users">
        SELECT * FROM users limit #{start},2
    </select>
    <!--添加新用户-->
    <insert id="addUsers" parameterType="com.qianfeng.bean.Users">
        INSERT INTO users(users_account,users_pwd)VALUES (#{users_account},#{users_pwd})
    </insert>
    <!--修改用户信息-->
    <update id="updateUsers" parameterType="com.qianfeng.bean.Users">
        UPDATE users u <set >
        <if test="users_account != null" >
            u.users_account = #{users_account,jdbcType=VARCHAR},
        </if>
        <if test="users_pwd != null" >
            u.users_pwd = #{users_pwd,jdbcType=VARCHAR},
        </if>
    </set>
        where u.id = #{id,jdbcType=INT}
    </update>
    <!--删除用户信息-->
    <delete id="removeUsers">
        DELETE users u WHERE u.id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
          #{item}
        </foreach>
    </delete>
    <!--搜索-->
    <select id="searchUsersBylike" parameterType="map" resultType="com.qianfeng.bean.Users">
        select * from users
        <where>
            <if test="type!=null and type != ''">
              <if test="type=='users_account'">
                AND users_account like CONCAT(CONCAT('%',#{key},'%'))
               </if>
              <if test="type=='users_pwd'">
               AND users_pwd like CONCAT(CONCAT('%',#{key},'%'))
              </if>
            </if>
        </where>
    </select>
</mapper>