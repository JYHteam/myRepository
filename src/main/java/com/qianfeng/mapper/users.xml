<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qianfeng.dao.UsersDao">
    <select id="login" resultType="com.qianfeng.bean.Users">
        SELECT * FROM users WHERE users_account=#{account} AND users_pwd=#{password}
    </select>
    <select id="findUsers" >
      <bind name="users_account" value="'%'+users_account+'%'"/>
        SELECT * FROM users WHERE users_account LIKE  #{account}
    </select>
    <select id="findAllUsers" resultType="com.qianfeng.bean.Users">
        SELECT id  FROM users
    </select>
</mapper>